<div class="domain-finder-container">
  <input
    type="text"
    id="domain-input"
    placeholder="Enter words for domain ideas..."
    class="w-full p-2 border border-gray-300 rounded"
  />
  <div id="tld-count" class="mt-2 text-sm text-gray-600"></div>
  <button
    id="add-word-btn"
    class="mt-2 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
  >
    Add Word
  </button>
  <div id="word-list" class="mt-4">
    <h3 class="text-lg font-semibold">Words + TLDs:</h3>
    <ul id="unique-words" class="list-disc pl-5"></ul>
  </div>
</div>

<script>
  import { DomainFinder } from "@/domain_finder";
  document.addEventListener("DOMContentLoaded", () => {
    new DomainFinder();
  });
</script>

<style>
  .domain-finder-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 1rem;
  }

  .delete-btn {
    opacity: 0.7;
    transition: opacity 0.2s;
  }

  .delete-btn:hover {
    opacity: 1;
  }

</style>